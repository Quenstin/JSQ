<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp">

    <EditText
        android:id="@+id/etOne"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="35dp"
        android:minWidth="20dp"
        android:layout_marginRight="45dp"
        android:background="@color/theme_assist_color"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_keyboard_left_paren"
        app:layout_constraintBottom_toBottomOf="@+id/etTow"
        app:layout_constraintRight_toLeftOf="@+id/etTow"
        app:layout_constraintTop_toTopOf="@+id/etTow" />

    <EditText
        android:id="@+id/etTow"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:minWidth="40dp"
        android:selectAllOnFocus="true"
        android:gravity="center"
        android:background="@color/theme_assist_color"

        app:layout_constraintRight_toLeftOf="@+id/etOne"
        app:layout_constraintTop_toBottomOf="@+id/etOne" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_keyboard_right_paren"
        app:layout_constraintBottom_toBottomOf="@+id/etTow"
        app:layout_constraintLeft_toRightOf="@+id/etTow"
        app:layout_constraintTop_toTopOf="@+id/etTow" />


</androidx.constraintlayout.widget.ConstraintLayout>