<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="log"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/etOneLog"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:minWidth="20dp"
        app:layout_constraintTop_toTopOf="@+id/tvLog"
        app:layout_constraintLeft_toRightOf="@+id/etTowLog"
        android:background="@color/theme_assist_color"
        android:gravity="center" />



    <TextView
        android:id="@+id/etTowLog"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:minWidth="20dp"
        app:layout_constraintTop_toTopOf="@+id/tvLog"
        app:layout_constraintLeft_toRightOf="@+id/tvLog"
        android:selectAllOnFocus="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@color/theme_assist_color" />

</androidx.constraintlayout.widget.ConstraintLayout>