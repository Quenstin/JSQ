<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/factorial_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/factorial_left_bracket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="("
        android:textColor="@color/input_layer_1_color"
        android:textSize="28.0dip" />

    <LinearLayout
        android:id="@+id/factorial_horizontal_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="1.0dip"
        android:layout_marginBottom="1.0dip"
        android:gravity="bottom">

        <TextView
            android:layout_width="18.899994dip"
            android:layout_height="30.0dip"
            android:background="@drawable/shape_dotted_stroke" />
    </LinearLayout>

    <TextView
        android:id="@+id/factorial_right_bracket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="1.0dip"
        android:text=")"
        android:textColor="@color/input_layer_1_color"
        android:textSize="28.0dip" />

    <TextView
        android:id="@+id/factorial_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="!"
        android:textColor="@color/input_layer_1_color"
        android:textSize="28.0dip" />
</LinearLayout>