<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/integ_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_equation"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2.0dip"
            android:gravity="center"
            android:text="âˆ«"
            android:textColor="@color/white"
            android:textSize="24.0dip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/integ_up_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip"
                android:layout_marginTop="4.0dip"
                android:layout_toRightOf="@+id/tv_equation"
                android:gravity="bottom">

                <TextView
                    android:layout_width="13.799988dip"
                    android:layout_height="16.0dip"
                    android:background="@drawable/shape_dotted_stroke" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/integ_down_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/integ_up_root"
                android:layout_marginTop="2.0dip"
                android:gravity="bottom">

                <TextView
                    android:layout_width="13.799988dip"
                    android:layout_height="16.0dip"
                    android:background="@drawable/shape_dotted_stroke" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/integ_right_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.0dip"
            android:layout_marginRight="2.0dip"
            android:gravity="center">

            <TextView
                android:layout_width="13.799988dip"
                android:layout_height="16.0dip"
                android:background="@drawable/shape_dotted_stroke" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16.0dip"
            android:layout_toRightOf="@+id/integ_right_root"
            android:gravity="center"
            android:text="dx"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>